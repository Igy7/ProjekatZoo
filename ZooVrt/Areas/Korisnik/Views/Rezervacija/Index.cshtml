@model IEnumerable<ZooVrt.Entities.Rezervacija>

@{
    ViewBag.Title = "Index";
}

<h2>Rezervacije</h2>
<br/>

<p>
    <div>
        @Html.Partial("_NapraviRezervacijuPartial")
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.korisnickoIme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dogadjaj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.termin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brRezervisanihKarata)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.korisnickoIme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dogadjaj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.termin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brRezervisanihKarata)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.rezervacijaID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.rezervacijaID }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.rezervacijaID })
        </td>
    </tr>
}

</table>
