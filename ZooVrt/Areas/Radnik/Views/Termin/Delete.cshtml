    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Termin</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Vreme pocetka:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vremePocetka)
        </dd>

        <dt>
            Vreme kraja:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vremeKraja)
        </dd>

